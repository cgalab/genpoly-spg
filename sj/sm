# Set linestyle 1 to blue (#0060ad)
set style line 1 \
    linecolor rgb '#0060ad' \
    linetype 1 linewidth 2 \
    pointtype 7 pointsize 0.5

set key off

if (!exists("f")) f = "small.dat"


# the 'small.dat' file has the coordinates in the polygonar order, i.e. in the 'dat' format.
plot f with linespoints linestyle 1
#pause -1 "Hit any key to continue"
